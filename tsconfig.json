{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "allowUnreachableCode": true,
    "declaration": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "outDir": "./build/",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "*": [
        "typings/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./typings/**/*"
  ]
}